		<script>
			$(window).scroll(function(){
				var top=$(window).scrollTop();
				if(top==0){
					$("div").stop().animate({height:"80px"})					
				}else if(top<20&&top>0){
					$("div").stop().animate({height:"60px"},500)
				}
			})
		</script>
